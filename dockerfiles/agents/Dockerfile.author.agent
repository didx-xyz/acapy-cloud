FROM ghcr.io/didx-xyz/acapy-agent-bbs:py3.12-1.1.1b4

USER root

# Install Google Protobuf
ARG PROTOBUF_VERSION=5.28.1
RUN pip install --no-cache-dir protobuf==${PROTOBUF_VERSION}

# Install wallet group id plugin
RUN pip install --no-cache-dir git+https://github.com/didx-xyz/acapy-wallet-groups-plugin@42b4097e

# install nats-events plugin
RUN pip install --no-cache-dir git+https://github.com/didx-xyz/aries-acapy-plugins@593d2d7a#subdirectory=nats_events

COPY scripts/startup.sh startup.sh
RUN chmod +x ./startup.sh

USER aries

ENTRYPOINT [ "./startup.sh" ]
CMD [ "--wallet-type", "askar", "--auto-promote-author-did", \
  "--plugin", "acapy_wallet_groups_plugin", \
  "--plugin", "nats_events.v1_0.nats_queue.events", "--plugin-config-value", "nats_queue.connection.connection_url=\"nats://nats-1:4222\""]
